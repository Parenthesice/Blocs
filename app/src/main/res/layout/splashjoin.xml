<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/vscroll2"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="30dp"
				android:background="@android:color/transparent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:background="@android:color/transparent"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview3"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_marginRight="3dp"
						android:src="@drawable/logo_round"
						android:scaleType="fitXY"
						android:transitionName="image" />
					<TextView
						android:id="@+id/textview1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="9dp"
						android:text="Welcome Back!"
						android:textSize="25sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:translationY="6.0dp"
						android:layout_gravity="center_horizontal" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="60dp"
					android:background="@android:color/transparent"
					android:gravity="center_horizontal|center_vertical"
					android:text="Reconnect like everyone else"
					android:textSize="14sp"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal" />
				<LinearLayout
					android:id="@+id/use"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/edittext3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="13dp"
						android:background="#E0F2F1"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Username (e.g. logan)"
						android:textColorHint="#757575"
						android:singleLine="true"
						android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSRUVWXYZ0123456789" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/mail"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:orientation="vertical">
					<EditText
						android:id="@+id/edittext1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="13dp"
						android:background="#E0F2F1"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="username\@provider.com"
						android:textColorHint="#757575"
						android:singleLine="true" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/pass"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<EditText
							android:id="@+id/edittext2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="13dp"
							android:background="#E0F2F1"
							android:textSize="16sp"
							android:textColor="#000000"
							android:hint="Password"
							android:textColorHint="#757575"
							android:singleLine="true"
							android:inputType="textPassword"
							android:layout_weight="1" />
					</LinearLayout>
				</LinearLayout>
				<CheckBox
					android:id="@+id/checkbox1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Show password"
					android:textSize="14sp"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/textview5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="3dp"
					android:layout_marginTop="20dp"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:text="Forgot Password\?"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#455A64" />
				<LinearLayout
					android:id="@+id/linear5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					android:padding="8dp"
					android:background="#00816A"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Login"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
				</LinearLayout>
				<CheckBox
					android:id="@+id/checkbox3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="15dp"
					android:gravity="center_horizontal|center_vertical"
					android:text="I Agree To The Terms Of Service"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#9E9E9E"
					app:fontFamily="@font/sofia" />
				<LinearLayout
					android:id="@+id/linear7"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/linear9"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#009688"
						android:orientation="horizontal"
						android:layout_weight="1" />
					<TextView
						android:id="@+id/textview8"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:text="or"
						android:textSize="12sp"
						android:textColor="#009688" />
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#009688"
						android:orientation="horizontal"
						android:layout_weight="1" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview10"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="7dp"
					android:layout_marginTop="15dp"
					android:layout_marginRight="7dp"
					android:layout_marginBottom="20dp"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:text="Join The Community"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#455A64" />
				<LinearLayout
					android:id="@+id/linear12"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<com.shobhitpuri.custombuttons.GoogleSignInButton
						android:id="@+id/button1"
						android:layout_width="250dp"
						android:layout_height="wrap_content"
						android:textSize="12sp"
						android:textColor="#000000"
						android:text="@string/google_sign_in"
						
						app:isDarkTheme="true" />
				</LinearLayout>
				<TextView
					android:id="@+id/textview11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="7dp"
					android:layout_marginTop="18dp"
					android:layout_marginRight="7dp"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:text="Sponsored by Quackbits\nA Tech Start-up\nCreated by \@paren7 on telegram"
					android:textSize="10sp"
					android:textStyle="bold"
					android:textColor="#455A64" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
