<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/topLayoutBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#00816A"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/topLayoutBarBack"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:padding="8dp"
			android:src="@drawable/back"
			android:scaleType="centerCrop"
			android:background="?android:attr/selectableItemBackgroundBorderless"
			android:clickable="true"
			android:focusable="true" />
		<TextView
			android:id="@+id/topLayoutBarTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:text="Privacy And Policy"
			android:textSize="20sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:layout_weight="1"
			app:fontFamily="@font/sofia" />
		<ImageView
			android:id="@+id/topLayoutBarImgSpc"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:padding="12dp"
			android:src="@drawable/default_image"
			android:scaleType="centerCrop"
			android:alpha="0.0" />
	</LinearLayout>
</LinearLayout>
